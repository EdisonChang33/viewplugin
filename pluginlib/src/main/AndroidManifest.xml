<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hobby.pluginlib">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <activity
            android:name="com.hobby.pluginlib.PluginHostActivity"
            android:exported="false">
            <intent-filter>
                <action android:name="com.hobby.viewplugin.HOST_ACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.hobby.pluginlib.PluginHostMultiTabActivity"
            android:exported="false">
            <intent-filter>
                <action android:name="com.hobby.viewplugin.MULTI_TAB_HOST_ACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>
